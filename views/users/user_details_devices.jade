extends ../layouts/default

block content
	div.container

		include ../includes/_user_vanity

		.row
			.span12
				include ../includes/_organization_user_details_nav
		.row
			.span12
				include ../includes/_user_details_default
				

		.row
			.span12
				#organizationUsers
					- x = 93
					- for (i=0;i<=2;i++)
						div.userIncidentRow.pull-left.incident
							ul.userIncidentType.pull-left
								li.incidentIcon
									img(src="/images/temp_icon.png")
							ul.incidentDescription.pull-left
