								ul.incidentAction.pull-left
									li.dismiss
										.btn-group
											a.btn.dropdown-toggle.btn-danger(data-toggle="dropdown", href="#") Action&nbsp;
												span.caret
											ul.dropdown-menu	
												li 
													a(href="#") Review
												li 
													a(href="#") Dismiss
												li 
													a(href="#") Nuke

		.row
			.span12
				div.eventsSeparator
					include ../includes/_user_events


