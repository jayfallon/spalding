extends ../layouts/default

block content
	div.container

		include ../includes/_user_vanity

		.row
			.span12
				include ../includes/_organization_user_details_nav
		.row
			.span12
				include ../includes/_user_details_default

		.row
			.span12
				- for (i=0;i<=11;i++)
					a(href="/users/usernames")
						div.userRow.pull-left
							ul.userRisk.pull-left
								li.riskScore= (x--)
								li.riskLabel 
							ul.userMeta.pull-left
								li.username 
									a(href="/department/departmentname") Cloud Service Name
								li.titleDepartment
									span= Math.floor(Math.random()*30+1)
									span &nbsp;Active Users
								li.location Cloud Service Type
							div.pull-right
								ul.userDevices.pull-left
									li.deviceScore= Math.floor(Math.random()*9+1)
									li.deviceLabel Devices
								ul.locations.pull-left
									li.locationsScore= Math.floor(Math.random()*9+1)
									li.locationsLabel Locations
								ul.userIncidents.pull-left
									li.incidentScore 0
									li.incideLabel Incidents


block document

	include ../includes/_username_document

	include ../includes/_compromises_document

	script
		$(function(){
			$("#locationRollUp a:nth-child(2) ul").addClass('active');
		});